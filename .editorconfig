# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

end_of_line = lf
charset = utf-8

[**]
trim_trailing_whitespace = true
insert_final_newline = false

[**.code-snippets]
indent_size = 4
indent_style = space

[**.json]
indent_size = 2
indent_style = space

[.github/workflows/**.yaml]
indent_size = 2
indent_style = space
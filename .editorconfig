# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[**]
charset = utf-8
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true

[**.code-snippets]
indent_size = 4
indent_style = space

[**.json]
indent_size = 2
indent_style = space

[.github/workflows/**.yaml]
indent_size = 2
indent_style = space